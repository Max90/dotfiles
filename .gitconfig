[user]
	email = alexbel@lavabit.com
	name  = alexbel

[color]
  branch = auto
  diff   = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold
  plain = white dim
  commit = yellow bold
  func = green dim

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  lg = log --graph --pretty=format:'%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[core]
	autocrlf = false
  editor = vim

[heroku]
  account = main

[github]
  user = alexbel

[help]
  autocorrect = 1

# remove lines below if you use Git 2.0
[push]
	default = simple
